{
    "name": "adrien-cuisse/php-file-generator",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Adrien Cuisse",
            "email": "adriien.cuisse@epitech.eu"
        }
    ],
	"scripts": {
		"test": "vendor/bin/phpunit-watcher watch --colors=always",
		"test-report": "vendor/bin/phpunit --coverage-html coverage --testdox-html coverage/dox.html"
	},
	"autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "spatie/phpunit-watcher": "^1.23"
    }
}
